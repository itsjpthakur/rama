{
  "npmClient": "npm",
  "packages": [
    "packages/*",
    "plugins/*",
    "src/setup/*"
  ],
  "version": "0.20.4",
  "ignoreChanges": [
    "**/*.md",
    "**/*.spec.tsx?",
    "**/*.spec.jsx?",
    "**/__mocks__/**"
  ],
  "command": {
    "publish": {
      "message": "chore(rama-ui): publish %s",
      "graphType": "all"
    },
    "version": {
      "message": "chore(rama-ui): publish %s",
      "exact": true
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
